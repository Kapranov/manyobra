<%= form_for @blog_comment do |f| %>
    <% if @blog_comment.errors.any? %>
    <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
            <% for message in @blog_comment.errors.full_messages %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <div class="row">
        <div class="form-group">
            <div class="col-md-6">
                <%= f.label :author, t('.name', default: 'Your name') %>
                <%= f.text_field :author,  maxlength: '100', class: 'form-control' %>
            </div>
            <div class="col-md-6">
                <%= f.label :email, t('.email', default: 'Your email address') %>
                <%= f.text_field :email,  maxlength: '100', class: 'form-control' %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-12">
                <%= f.label :content, t('comment', default: 'New comment') %>
                <%= f.text_area :content, maxlength: "5000", rows: "10", class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <%= f.submit t('Add_comment', default: 'Add comment'), class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>