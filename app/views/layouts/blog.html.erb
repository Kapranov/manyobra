<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <title><%= content_for?(:title) ? yield(:title) : "Manyobra" %> - <%= t'Blog' %> - Manyobra</title>
    <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : "" %>" />
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "" %>" />
    <meta name="author" content="Manyobra" />
    <meta name="language" content="<%= I18n.t(I18n.locale, :scope => 'languages.names') %>">
    <meta name="robots" content="index, follow">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="Manyobra">
    <meta name="twitter:creator" content="Manyobra">
    <meta name="twitter:title" content="<%= content_for?(:title) ? yield(:title) : "Manyobra" %>">
    <meta name="twitter:description" content="<%= content_for?(:description) ? yield(:description) : "" %>">

    <meta property="og:site_name" content="Manyobra.com"/> 
    <meta property="og:title" content="<%= content_for?(:title) ? yield(:title) : "Manyobra" %>" />
    <meta name="og:description" content="<%= content_for?(:description) ? yield(:description) : "" %>">
    <meta property="og:type" content="article" />
    <meta property="og:locale" content="<%= I18n.locale %>" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="article:author" content="https://www.facebook.com/manyobrasl" />
    <meta property="og:image" content="<%= content_for?(:image_link) ? yield(:image_link) : "" %>" />

    <meta name="geo.placename" content="Valencia, España" /> 
    <meta name="geo.position" content="39.623185;-0.589984" /> 
    <meta name="geo.region" content="ES-Valencia" /> 
    <meta name="ICBM" content="39.623185, -0.589984" />

    <!-- Canonical Link -->
    <link rel="canonical" href="<%= url_for(:only_path => false, locale: :es) %>"/>
    <link rel="alternate" hreflang="en" href="<%= url_for(:only_path => false, locale: :en) %>"/>
    <link rel="alternate" hreflang="ru" href="<%= url_for(:only_path => false, locale: :ru) %>"/>
    <!-- Canonical Link End -->

    
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Web Fonts  -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700&subset=cyrillic-ext,latin' rel='stylesheet' type='text/css'>
    <!-- <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800&subset=latin,cyrillic|Alegreya|Alegreya+SC|Oswald:400,300" rel="stylesheet" type="text/css" />-->
    <!-- Libs CSS -->
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "skin" %>
    <%= stylesheet_link_tag "font-awesome" %>
    <%= stylesheet_link_tag "vendor/owl-carousel/owl.carousel" %>
    <%= stylesheet_link_tag "vendor/owl-carousel/owl.theme" %>
    <%= stylesheet_link_tag "vendor/rs-plugin/css/settings" %>
    <%= stylesheet_link_tag "vendor/isotope/jquery.isotope" %>
    <%= stylesheet_link_tag "vendor/magnific-popup/magnific-popup" %>
    <%= stylesheet_link_tag "theme" %>
    <%= stylesheet_link_tag "theme-elements" %>
    <%= stylesheet_link_tag "theme-animate" %>
    <%= stylesheet_link_tag "skin" %>
    <%= stylesheet_link_tag "theme-responsive" %>
    <%= yield :css %>
    <!-- Head Libs -->
    <script src="/vendor/modernizr.js"></script>
    <!--[if IE]>
        <%= stylesheet_link_tag "/ie" %>
    <![endif]-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= yield :head %>
    <meta name="google-site-verification" content="5Dh9OFP5rEt0du5LE21xhFy43Hlfo3sHCBxA1fjEd04" />
</head>
    <body class="header-top">
        <div class="body">
            <header>
                <div class="header-top">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <p>
                                    <i class="fa fa-phone"></i>  (+34) 686-705-360 | (+34) 679-044-118
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p>
                                    <i class="fa fa-globe fa-lg"></i>
                                    <%= link_to_unless I18n.locale == :en, "English", { :locale => "en" }, :data => { :rel => "tooltip", :placement => "bottom" }, :title => t('languages.names.en'), :rel => "nofollow" %> <span>&middot;</span> <%= link_to_unless I18n.locale == :es, "Español", { locale: "es" }, :data => { :rel => "tooltip", :placement => "bottom" }, :title => t('languages.names.es'), :rel => "nofollow" %> <span>&middot;</span> <%= link_to_unless I18n.locale == :ru, "Русский", { locale: "ru" }, :data => { :rel => "tooltip", :placement => "bottom" }, :title => t('languages.names.ru'), :rel => "nofollow" %>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <ul class="social-icons">
                                    <li><a href="" target="_blank" data-placement="bottom" rel="tooltip" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="https://www.facebook.com/manyobrasl" target="_blank" data-placement="bottom" rel="tooltip" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="" rel="publisher" target="_blank" data-placement="bottom" rel="tooltip" title="Google+"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="" target="_blank" data-placement="bottom" rel="tooltip" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div itemscope="" itemtype="http://schema.org/Organization">
                        <div class="logo">
                            <%= link_to(image_tag("logo.png", itemprop: "logo", role: "banner", alt: "Manyobra logo"), page_home_path, itemprop: "url", title: t('Home')) %>
                        </div>
                    </div>
                    
                    <div class="navbar-collapse nav-main-collapse collapse">
                        <nav class="nav-main mega-menu" role="navigation">
                            <ul class="nav nav-pills nav-main" id="mainMenu">
                                <%= render "layouts/navigation_links" %>
                                <% if current_user.nil? %>
                                <li><%= link_to t('Authorization'), login_path, :rel => "nofollow" %></li>
                                <% else %>
                                <li><%= link_to current_user.first_name, profile_path %></li>
                                <li><%= link_to t('Logout'), logout_path %></li>
                                <% end %>
                            </ul>
                        </nav>
                    </div>
                    <button class="btn btn-responsive-nav btn-inverse" data-toggle="collapse" data-target=".nav-main-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
            </header>
            <div role="main" class="main">
                <%= yield :heading %>
                <% flash.each do |name, msg| %>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <%= content_tag(:div, raw(msg), :class => "alert alert-#{name}", :id => "#{name}") %>
                            </div>
                        </div>
                    </div>
                <% end %>
                <%= raw yield.html_safe %>
            </div>
            <footer id="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <p class="white"><%= [t('pages.home.section.slider.random_text.one'), t('pages.home.section.slider.random_text.two'), t('pages.home.section.slider.random_text.three'), t('pages.home.section.slider.random_text.four'), t('pages.home.section.slider.random_text.five')].sample %> <br><a href="<%= page_contact_path %>" class="btn-flat"><%= raw t 'pages.contact.section.contact_us.title'%> <i class="fa fa-arrow-right"></i></a></p>
                            <div class="navigation">
                                <ul class="contact">
                                    <li><i class="fa fa-mobile"></i> <a href="phone:+34686705360" class="btn-flat" rel="nofollow">(+34) 686 705 360</a></li>
                                    <li><i class="fa fa-mobile"></i> <a href="phone:+34679044118" class="btn-flat" rel="nofollow">(+34) 679 044 118</a></li>
                                    <li><i class="fa fa-phone"></i> <a href="phone:+34962790585" class="btn-flat" rel="nofollow">(+34) 962 790 585</a></li>
                                    <li><i class="fa fa-envelope"></i> <a href="mailto:info@manyobra.com" class="btn-flat" rel="nofollow">info@manyobra.com</a></li>
                                    <li><i class="fa fa-skype"></i> <a href="skype:manyobra" class="btn-flat" data-rel="tooltip" title="Skype" rel="nofollow">manyobrasl</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <h4><%= t'Services' %></h4>
                            <div class="navigation">
                                <ul class="list-unstyled">
                                    <li><%= link_to t('Prices'), page_prices_path %></li>
                                    <li><%= link_to t('Services'), page_services_path %></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <h4>Manyobra.com</h4>
                            <div class="navigation">
                                <ul class="list-unstyled">
                                    <li><%= link_to t('About_us'), page_about_us_path %></li>
                                    <li><%= link_to t('Blog'), blog_path %></li>
                                    <li><%= link_to t('Contact'), page_contact_path, :rel => "contact" %></li>
                                    <li><%= link_to t('Sitemap'), page_sitemap_path %></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <h4><%= t('.section.posts.title').html_safe %></h4>
                            <ul class="list-unstyled">
                                <% Blog::Post.last(4).each do |blog_post| %>
                                <li><%= link_to blog_post.title, blog_post_path(blog_post) %></li>
                                <% end %>
                            </ul>
                            <%= link_to blog_path, class: 'btn-flat pull-right btn-xs' do %>
                                <%= t('.section.posts.link') %>
                                <%= content_tag(:i, nil, class: "fa fa-arrow-right") %>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="footer-copyright">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-5">
                                <p>&copy; <%= Time.now.year %>. <%= t('.section.сopyright') %>. <%= t'.section.made.title' %> - <a href="http://www.zettheme.com" target="_blank" rel="tooltip" title="<%= t'.section.made.creators'%>">Zettheme</a> <i class="fa fa-smile-o fa-lg"></i></p>
                            </div>
                            <div class="col-md-3">
                                <p>
                                    <%= render "layouts/language_switch_links" %>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <ul class="social-icons">
                                    <li><a href="" target="_blank" rel="tooltip" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="https://www.facebook.com/manyobrasl" target="_blank" rel="tooltip" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="" target="_blank" rel="tooltip" title="Google+"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="" target="_blank" rel="tooltip" title="Linkedin"><i class="fa fa-linkedin"  ></i></a></li>
                                    <li><a href="skype:manyobra" rel="tooltip" title="Skype"><i class="fa fa-skype"></i></a></li>
                                </ul>
                                <%#= link_to(image_tag("logo-footer.png", role: "banner", alt: "Manyobra logo"), class: "logo push-bottom", title: t('Home')) %>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

        <!-- Libs -->
        <%= javascript_include_tag "vendor/jquery" %>
        <%= javascript_include_tag "plugins" %>
        <%= javascript_include_tag "vendor/jquery.easing" %>
        <%= javascript_include_tag "vendor/jquery.appear" %>
        <%= javascript_include_tag "vendor/jquery.cookie" %>
        <%= javascript_include_tag "bootstrap" %>
        <%= javascript_include_tag "vendor/masonry" %>
        <%= javascript_include_tag "vendor/rs-plugin/js/jquery.themepunch.plugins.min" %>
        <%= javascript_include_tag "vendor/rs-plugin/js/jquery.themepunch.revolution.min" %>
        <%= javascript_include_tag "vendor/owl-carousel/owl.carousel" %>
        <%= javascript_include_tag "vendor/magnific-popup/magnific-popup" %>
        <%= javascript_include_tag "vendor/jquery.knob" %>
        <%= javascript_include_tag "vendor/jquery.stellar" %>
        <%= javascript_include_tag "vendor/jquery.validate" %>
        <%= javascript_include_tag "vendor/isotope/jquery.isotope" %>
        <%= javascript_include_tag "theme" %>
