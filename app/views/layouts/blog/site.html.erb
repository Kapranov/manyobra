    <meta name="keywords" content="" />
    <meta name="description" content="Артем Фудосін - Адвокат" />
    <meta name="author" content="Manyobra.com" />
    <meta name="language" content="<%= I18n.t(I18n.locale, :scope => 'languages.names') %>">
