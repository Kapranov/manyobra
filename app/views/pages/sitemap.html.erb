                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.drafting_projects_of_architectural_and_engineering'), service_page_drafting_projects_of_architectural_and_engineering_path %></li>
                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.construction'), service_page_construction_path %></li>
                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.reforms_in_neighboring_communities'), service_page_reforms_in_neighboring_communities_path %></li>
                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.urgent_repair'), service_page_urgent_repair_path %></li>
                    </ul>
                </li>
                <li><i class="fa fa-caret-right"></i><%= link_to t('.prices'), page_prices_path %></li>
                <li><i class="fa fa-caret-right"></i><%= link_to t('.blog'), blog_path %></li>
                <li><i class="fa fa-caret-right"></i><%= link_to t('.contact'), page_contact_path %></li>
            </ul>
        </div>
        <div class="col-md-6 hidden-xs">
            <h2><%= t'.company.who_we_are' %></h2>
            <p class="lead"><%= t'.company.brief_description' %></p>
            <p><%= t'.company.description' %></p>
            <p><%= t'.company.achievement' %></p>
            <p><%= t'.company.workers.text' %></p>
