                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.installation_of_an_electrical_wiring'), service_page_installation_of_an_electrical_wiring_path %></li>
                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.repair_of_bathrooms'), service_page_repair_of_bathrooms_path %></li>
                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.installation_of_plumbing'), service_page_installation_of_plumbing_path %></li>
                        <li><i class="fa fa-caret-right"></i><%= link_to t('.services.repair_of_office_and_industrial_premises'), service_page_repair_of_office_and_industrial_premises_path %></li>
