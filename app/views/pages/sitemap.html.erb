<% content_for :title do t'.page.title' end %>
<% content_for :description do t'.page.description' end %>
<% content_for :keywords do t'.page.keywords' end %>
<% content_for :heading do %>
<section class="page-top">
    <section class="parallax parallax-top" data-stellar-background-ratio="0.4" style="background-image:url(<%= image_url("slides/hill.jpg") %>);">
        <div class="container">
            <div class="row center">
                <div class="col-md-12"></div>
            </div>
        </div>
    </section>
    <div class="page-top-info with-parallax container">
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb">
                    <li><%= link_to t('.home'), page_home_path %></li>
                    <li class="active"><%= t'.pages' %></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1><%= raw t'.title' %></h1>
            </div>
        </div>
    </div>
</section>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <ul class="sitemap list icons">
                <li><i class="fa fa-caret-right"></i><%= link_to t('.home'), root_path %></li>
                <li><i class="fa fa-caret-right"></i><%= link_to t('.about'), page_about_us_path %></li>
                <li>
                    <i class="fa fa-caret-right"></i><%= link_to t('.services.title'), page_contact_path %>
